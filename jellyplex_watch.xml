<?xml version="1.0"?>
<Container version="1">
  <Name>jellyplex-watch</Name>
  <Repository>/luigi311/JellyPlex-Watched</Repository>
  <Registry>https://hub.docker.com/r/luigi311/jellyplex-watched</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/misterjtc/docker-templates/issues</Support>
  <Project>https://github.com/luigi311/JellyPlex-Watched.git</Project>
  <Overview>Sync watched between jellyfin and plex locally</Overview>
  <Category>Tools</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/misterjtc/docker-templates/main/bragibooks.xml</TemplateURL>
  <Icon></Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <Description>Keep in sync all your users watched history between jellyfin and plex servers locally. This uses file names and provider ids to find the correct episode/movie between the two. This is not perfect but it works for most cases. You can use this for as many servers as you want by entering multiple options in the .env plex/jellyfin section separated by commas.
  <Networking>
    <Mode>bridge</Mode>
    <Publish/>
  </Networking>
  <Data>
    <Volume>
      <HostDir/>
      <ContainerDir>/app/.env</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value>99</Value>
      <Name>PUID</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value>100</Value>
      <Name>PGID</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="Appdata" Target="/app/.env" Default="" Mode="rw" Description="Edit .env file in this folder to complete setup." Type="Path" Display="always" Required="false" Mask="false"/>
  <Config Name="PUID" Target="PUID" Default="" Mode="" Description="PUID" Type="Variable" Display="advanced" Required="false" Mask="false">99</Config>
  <Config Name="PGID" Target="PGID" Default="" Mode="" Description="PGID" Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
</Container>
